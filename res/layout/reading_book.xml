<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEEBCE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dip"
        android:layout_gravity="center_vertical"
        android:background="#C9C9C9"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtPreChapter"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="@string/read_prechapter" >
        </TextView>

        <TextView
            android:id="@+id/txtCurChapter"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center" >
        </TextView>

        <TextView
            android:id="@+id/txtNextChapter"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="3dp"
            android:text="@string/read_nextchapter" >
        </TextView>
    </LinearLayout>

    <com.example.mxmtxtreader.component.ReadingTextView
        android:id="@+id/viewContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#CEEBCE"
        android:text="" />

</LinearLayout>